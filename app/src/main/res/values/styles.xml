<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextViews" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="ButtonBadTint" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorBadRed</item>
    </style>

    <style name="ButtonInhibitionTint" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorInhibitionYellow</item>
    </style>

    <style name="ButtonGoodTint" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorGoodGreen</item>
    </style>

    <style name="WhiteTint" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>
